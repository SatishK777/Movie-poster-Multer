<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Movie</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../public/styles/main.css">
  <style>
    body {
      background: url('/uploads/movie-2.jpg') no-repeat center center fixed;
      background-size: cover;
      font-family: 'Arial', sans-serif;
    }

    .card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .form-control {
      margin-bottom: 15px;
    }

    .current-poster {
      margin-top: 10px;
    }

    .current-poster img {
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .container {
      max-width: 600px;
     
    }

    button {
      background-color: #4CAF50;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      width: 100%;
    }

    button:hover {
      background-color: #45a049;
    }
  </style>
</head>

<body>
  <div class="container mt-5">
    <h1 class="text-center mb-5 fw-bold">Edit Movie</h1>

    <div class="card">
      <div class="card-body">
        <!-- Ensure the action URL is correct -->
        <form action="/edit/<%= movie._id %>" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <input type="text" class="form-control" id="title" name="title" value="<%= movie.title %>" placeholder="Name" required>
          </div>
          <div class="mb-3">
            <textarea class="form-control" id="description" name="description" placeholder="Description" rows="4" required><%= movie.description %></textarea>
          </div>
          <div class="mb-3">
            <input type="date" class="form-control" id="releaseDate" value="<%= movie.releaseDate.toISOString().split('T')[0] %>" name="releaseDate" required>
          </div>
          <div class="mb-3">
            <input type="text" class="form-control" id="genre" name="genre" value="<%= movie.genre %>" placeholder="Genre" required>
          </div>
          <div class="mb-3">
            <input type="number" class="form-control" id="rating" name="rating" value="<%= movie.rating %>" step="0.1" min="0" max="10" required>
          </div>
          <div class="mb-3">
            <input type="file" class="form-control" id="poster" name="poster">
            <div class="current-poster">
              <p>Current Poster:</p>
              <img src="<%= movie.posterPath %>" alt="Current Poster" width="100">
            </div>
          </div>
          <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
        </form>
      </div>
    </div>
  </div>
</body>

</html>
