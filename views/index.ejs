<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie Flex</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: url('/uploads/dash-bg.jpg');
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-position: center;
      background-size: cover;
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #333;
      color: white;
      padding: 10px;
    }

    header nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
      text-align: center;
    }

    header nav ul li {
      display: inline-block;
      margin: 0 15px;
    }

    header nav ul li a {
      color: white;
      text-decoration: none;
      font-weight: bold;
    }

    .container {
      max-width: 1200px;
      margin: auto;
      padding: 20px;
      
    }

    .movie-title {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 10px;
      color: black;
    }

    .movie-description {
      font-size: 0.9rem;
      color: #000;
    }

    .movie-card {
      transition: transform 0.2s;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }

    .movie-card:hover {
      transform: scale(1.05);
    }

    .movie-actions a {
      margin-right: 10px;
      color: #007bff;
      text-decoration: none;
    }

    .movie-actions a:hover {
      text-decoration: underline;
    }

    .movie-poster {
      border-radius: 10px;
      width: 100%;
      height: auto;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>

<body>
  <!-- Header Navigation -->
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/add">Add Movie</a></li>
      </ul>
    </nav>
  </header>

  <!-- Main Container -->
  <div class="container mt-4">
    <h1 class="text-center mb-4 text-white">Movies</h1>
    <hr class="text-white"/>
    <div class="row">
      <% movies.forEach(movie => { %>
      <div class="col-md-4">
        <div class="card mb-4 movie-card">
          <img src="/<%= movie.poster %>" alt="Movie Poster" class="card-img-top movie-poster">
          <div class="card-body">
            <h2 class="movie-title">TITLE :- <%= movie.title %></h2>
            <p class="movie-description">DESCRIPTION :- <%= movie.description %></p>
            <p class="movie-description">RATING:- <%= movie.rating %></p>
            <div class="movie-actions">
              <a href="/edit/<%= movie._id %>" class="btn  text-white btn-primary btn-sm">Edit</a>
              <a href="/delete/<%= movie._id %>" class="btn btn-danger text-white btn-sm">Delete</a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</body>

</html>
